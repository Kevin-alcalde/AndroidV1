<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.upc.dsa.androidproyecto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidProyecto"
        android:usesCleartextTraffic="true"
        tools:replace="android:icon,android:theme">
        <activity android:name=".PerfilRecyclerViewActivity"></activity>
        <activity android:name=".DashboardActivity" />
        <activity android:name=".TiendaActivity" />
        <activity android:name=".RankingActivity" />
        <activity android:name=".EditarperfilActivity" />
        <activity android:name=".ComunidadActivity" />
        <activity android:name=".BuscadorActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PerfilActivity" />
        <activity android:name=".ResgisterActivity" />
        <activity android:name=".LoginActivity" />
    </application>

</manifest>